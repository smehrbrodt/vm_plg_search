<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>plg_search_virtuemartcf</name>
    <author>Samuel Mehrbrodt</author>
    <authorEmail>s.mehrbrodt@gmail.com</authorEmail>
    <creationDate>June 2014</creationDate>
    <copyright>(C) 2004-2014 Virtuemart Team; (C) 2014 Samuel Mehrbrodt. All rights reserved.</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.0</version>
    <description>PLG_SEARCH_VM_CF_XML_DESCRIPTION</description>
    <files>
        <folder>language</folder>
        <filename plugin="virtuemartcf">virtuemartcf.php</filename>
        <filename>index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit"
                       type="text"
                       size="5"
                       default="50"
                       filter="integer"
                       label="PLG_SEARCH_VM_CF_SEARCH_LIMIT"
                       description="PLG_SEARCH_VM_CF_SEARCH_LIMIT_DESC"
                        />
                <field name="enable_product_description_search"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_VM_CF_ENABLE_DESC_SEARCH"
                       description="PLG_SEARCH_VM_CF_ENABLE_DESC_SEARCH_DESC">
                    <option value="1">PLG_SEARCH_VM_CF_YES</option>
                    <option value="0">PLG_SEARCH_VM_CF_NO</option>
                </field>
                <field name="enable_product_short_description_search"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_VM_CF_ENABLE_S_DESC_SEARCH"
                       description="PLG_SEARCH_VM_CF_ENABLE_S_DESC_SEARCH_DESC">
                    <option value="1">PLG_SEARCH_VM_CF_YES</option>
                    <option value="0">PLG_SEARCH_VM_CF_NO</option>
                </field>
                <field name="enable_customfields"
                       type="radio"
                       default="1"
                       label="PLG_SEARCH_VM_CF_ENABLE_CF"
                       description="PLG_SEARCH_VM_CF_ENABLE_CF_DESC">
                    <option value="1">PLG_SEARCH_VM_CF_YES</option>
                    <option value="0">PLG_SEARCH_VM_CF_NO</option>
                </field>
                <field name="customfields"
                       type="text"
                       size="10"
                       label="PLG_SEARCH_VM_CF_CUSTOMFIELDS"
                       description="PLG_SEARCH_VM_CF_CUSTOMFIELDS_DESC" />
                <field name="subtitledisplay"
                       type="list"
                       label="PLG_SEARCH_VM_CF_TITLE"
                       description="PLG_SEARCH_VM_CF_TITLE_DESC">
                    <option value="1">PLG_SEARCH_VM_CF_TITLE_CATEGORY</option>
                    <option value="2">PLG_SEARCH_VM_CF_TITLE_CATEGORY_CUSTOMTITLE</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
